<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="adminMapper">

	<select id="selectUser" resultType="MemberVO">
		SELECT *
		FROM MEMBERS
		WHERE USER_RESTRICT_END_DATE = SYSDATE
	</select>

	<update id="updateStatus" parameterType="_int">
		UPDATE MEMBERS
		SET STATUS = SYSDATE
		WHERE USER_ID = #{userId}
		AND USER_STATUS = 'Y'
	</update>
	
	<update id="deleteUser" parameterType="_int">
		UPDATE MEMBERS
		SET USER_STATUS = 'N'
		WHERE USER_ID = #{userId} 
	</update>
	
	<insert id="insertBoard">
		INSERT INTO (BOARD_ID
					,USER_ID
					,CATEGORY
					,TITLE
					,CONTENT
					,CREATE_DATE
					,UPDATE_DATE
					,VIEW_COUNT
					,IS_DELETED)
		VALUES(SEQ_BOARDS
			  ,#{userId}
			  ,#{category}
			  ,#{title}
			  ,#{content}
			  ,#{createDate}
			  ,#{updateDate}
			  ,#{viewCount}
			  ,#{isDeleted})
			  
	</insert>
	
</mapper>