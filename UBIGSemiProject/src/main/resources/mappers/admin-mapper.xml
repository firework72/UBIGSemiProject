<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="adminMapper">

	<select id="selectUser" resultType="MemberVO">
		SELECT *
		FROM MEMBERS
	</select>

	<update id="updateStatus" parameterType="map">
		UPDATE MEMBERS
		SET USER_RESTRICT_END_DATE
		<choose>
			<when test="days == 3">
				= SYSDATE + 3
			</when>
			<when test="days == 7">
				= SYSDATE + 7
			</when>
			<when test="days == 30">
				= SYSDATE + 30
			</when>
			<otherwise>
				= ADD_MONTHS(SYSDATE, 240)
			</otherwise>
		</choose>
		WHERE USER_ID = #{userId}
		AND USER_STATUS = 'Y'
	</update>
	
	<update id="changeStatus" parameterType="map">
		UPDATE MEMBERS
		SET USER_RESTRICT_END_DATE = SYSDATE
		WHERE USER_ID = #{userId}
		AND USER_STATUS = 'Y'
	</update>
	
	<update id="deleteUser" parameterType="string">
		UPDATE MEMBERS
		SET USER_STATUS = 'N'
		WHERE USER_ID = #{userId} 
	</update>
	
	<insert id="insertBoard">
		INSERT INTO (BOARD_ID
					,USER_ID
					,CATEGORY
					,TITLE
					,CONTENT
					,CREATE_DATE
					,UPDATE_DATE
					,VIEW_COUNT
					,IS_DELETED)
		VALUES(SEQ_BOARDS
			  ,#{userId}
			  ,#{category}
			  ,#{title}
			  ,#{content}
			  ,#{createDate}
			  ,#{updateDate}
			  ,#{viewCount}
			  ,#{isDeleted})
			  
	</insert>
	
	<insert id="insertActivity">
		INSERT INTO (ACT_ID
					,ADMIN_ID
					,ACT_DATE
					,ACT_END
					,ACT_ADDRESS
					,ACT_LAT
					,ACT_LON
					,ACT_LOAD
					,ACT_TITLE
					,ACT_MAX
					,ACT_CUR
					,ACT_MONEY)
		VALUES(SEQ_ACTIVITIES
			  ,#{adminId}
			  ,#{actDate}
			  ,#{actEnd}
			  ,#{actAddress}
			  ,#{actLat}
			  ,#{actLon}
			  ,#{actLoad}
			  ,#{actTitle}
			  ,#{actMax}
			  ,#{actCur}
			  ,#{actMoney})
	</insert>
	
	
	
</mapper>